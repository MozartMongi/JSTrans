<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
      <%-include('../styles/form.css') %>
  </style>
</head>
<body>
  <%- include('partial/_navbar') %> 
  <h2>Login Form </h2>

  <form action="/login" method="post">
    <div class="imgcontainer">
      <img src="https://st2.depositphotos.com/1006318/5909/v/380/depositphotos_59095205-stock-illustration-businessman-profile-icon.jpg" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <label for="email"><b>Username</b></label>
      <input type="text" placeholder="e.g: namakamu@mail.com" name="email" required><br>

      <label for="password"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" required><br>
          
      <button type="submit">Login</button>
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <a href="/"><button type="button" class="cancelbtn">Cancel</button></a>
    </div>
  </form><br>><br>
  <%- include('partial/_footer') %> 
</body>
</html>