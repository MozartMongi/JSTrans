<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        <%-include('../styles/main.css') %>
    </style>
    <title>List of Ticket Page</title>
</head>
<body>
    <%- include('partial/_navbar') %> 
    <br>
    <br>
    <table border="1">
        <thead style="background-color: rgb(161, 199, 201);">
            <th>
                Departure
            </th>
            <th>
                Depart Time
            </th>
            
            <th>
                Arrival
            </th>
            <th>
                Arrive Time
            </th>
            <th>
                Seats
            </th>
            <th>
                Price
            </th>
            <th>
                Action
            </th>
        </thead>
        <tbody>
            <% data.forEach(el =>{ %>
                <form action="/order/<%= el.id %> " method="post">
                <tr>
                    <td><%= el.Departure %> </td>
                    <td><%= el.DepartTime %> </td>
                    <td><%= el.Arrival %> </td>
                    <td><%= el.ArriveTime %> </td>
                    <td><%= el.Seats %> </td>
                    <td><%= el.Price %> </td>
                    <td><input type="submit" value="BUY"> <a href="https://www.google.com/maps/dir/?api=1&destination=<%= el.DepartPoint %>" target="_blank"> || View Map</a> </td>

                </tr>
            </form>
           <% }) %>
        </tbody>
    </table><br><br><br><br>
    <%- include('partial/_footer') %> 
</body>
</html>